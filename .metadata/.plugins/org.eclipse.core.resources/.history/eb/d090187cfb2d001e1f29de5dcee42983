package patternProgramsPractice;

public class Pattern18 {
	//BUTERFLY
	public static void main(String[] args) {
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=i;j++)
			{
				System.out.print("* ");
			}
			for(int j=i;j<=n;j++)
			{
				System.out.print("  ");
			}
			System.out.println();
			
			//=======================
			
			for(int i=1;i<=n;i++)
			{
				for(int j=i;j<=n;j++)
				{
					System.out.print("  ");
				}
				for(int j=1;j<=i;j++)
				{
					System.out.print("* ");
				}
				System.out.println();
			}
		}

	}

}
