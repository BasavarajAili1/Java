package patternProgramsPractice;

public class Pattern30 {
	//K SHAPE ALPHABET PATTERN
	public static void main(String[] args) {
		int i,j,
		char ch='A';

		int n = 5;
		for (i = n - 1; i >= 0; i-- ) 
		{
			ch = 'A';
			for (j = 0 ; j <= i; j++ ) 	
			{
				System.out.print((char)(ch + j) + " ");
			}
			System.out.println();
		}

		for (i = 1 ; i < n; i++ ) 
		{
			ch = 65;
			for (j = 0 ; j <= i; j++ ) 	
			{
				System.out.print((char)(ch + j) + " ");
			}
			System.out.println();
		}

	}

}
