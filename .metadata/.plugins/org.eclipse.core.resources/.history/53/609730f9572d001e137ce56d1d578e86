package patternProgramsPractice;

public class Pattern1 {

	public static void main(String[] args) {
		for(int i=0;i<=3;i++)
		{
			for(int j=0;j<=6;j++)
			{
				if((i==0&&j==3) || (i==1&&j%1==0) || (i==2&&j%1==0))
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
}
}
